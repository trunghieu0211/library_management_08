<div class="form-holder add-review">
  <h5><%= t ".add_review" %></h5>
  <h6><%= t ".your_rating" %></h6>
</div>
<%= form_for [@book, @book.reviews.build], :class => "sending-form",remote: :true do |f| %>
<div class="row">
      <div class="col-sm-12">
      <div id="rating-form">
        <label for="">Rating</label>
      </div>
        <div class="form-group">
          <%= f.text_area :content, :required => true, :class=>"form-control", :id=>"form-review", :rows => 5,:placeholder => "Text here..." %>
        </div>
      </div>
      <div class="col-sm-12">
        <%= f.submit t(".submit"), :class=>"btn-1 shadow-0 sm" %>
      </div>
    </div>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>


