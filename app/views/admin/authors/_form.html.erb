<%= form_for [:admin, @author], :html => {:class => "form-valide"} do |f| %>
  <%= error_messages @author %>
  <div class="field form-group row">
    <div class="col-lg-3 col-form-label">
      <%= f.label :name %>
    </div>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control",
        placeholder: "Enter a author name.." %>
    </div>
  </div>
  <div class="field form-group row">
    <div class="col-lg-3 col-form-label">
      <%= f.label :description %>
    </div>
    <div class="col-md-8">
      <%= f.text_area :description, class: "form-control", rows: "10",
        placeholder: "Enter a description.." %>
    </div>
  </div>
  <div class="field form-group row">
    <div class="col-lg-3 col-form-label">
      <%= f.label :avatar %>
    </div>
    <div class="col-md-8">
      <%= f.file_field :avatar %>
    </div>
  </div>
  <div class="actions form-group">
      <%= f.submit yield(:button), class: "btn btn-primary" %>
  </div>
<% end %>
